{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"complexity": {
				"noBannedTypes": "off",
				"noArguments": "off",
				"noStaticOnlyClass": "off"
			},
			"correctness": {
				"noUnusedImports": "error"
			},
			"style": {
				"useImportType": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"files": {
		"includes": [
			"lib/**/*.ts",
			"bin/**/*.ts",
			"tests/**/*.ts",
			"tests/**/*.tsx"
		]
	}
}

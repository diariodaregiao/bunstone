{
	"linter": {
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			},
			"complexity": {
				"noBannedTypes": "off",
				"noArguments": "off"
			},
			"correctness": {
				"noUnusedImports": "error"
			}
		}
	},
	"files": {
		"includes": [
			"lib/**/*.ts",
			"bin/**/*.ts",
			"tests/**/*.ts",
			"tests/**/*.tsx"
		]
	}
}

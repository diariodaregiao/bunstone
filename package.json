{
  "name": "@grupodiariodaregiao/bunstone",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    }
  },
  "version": "0.3.5",
  "homepage": "https://bunstone.diario.one/",
  "repository": {
    "url": "https://github.com/diariodaregiao/bunstone.git",
    "type": "git"
  },
  "type": "module",
  "bin": {
    "bunstone": "./bin/cli.ts"
  },
  "files": [
    "dist",
    "bin",
    "lib",
    "starter",
    "README.md"
  ],
  "scripts": {
    "test": "bun test",
    "coverage": "bun test --coverage",
    "build": "rm -rf dist && bun build ./index.ts --outdir ./dist --target bun --external react --external react-dom --external elysia --external @elysiajs/* && tsc --emitDeclarationOnly --declaration --outDir dist",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format . --write",
    "benchmark": "bun run ./benchmarks/run.ts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/autocannon": "^7.12.7",
    "@types/bun": "latest",
    "@types/express": "^5.0.6",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "autocannon": "^8.0.0",
    "express": "^5.2.1",
    "fastify": "^5.6.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "vitepress": "^1.6.4"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19",
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/html": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/static": "^1.4.7",
    "@elysiajs/swagger": "^1.3.1",
    "@nestjs/common": "^11.1.11",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/platform-fastify": "^11.1.11",
    "@react-email/components": "^1.0.4",
    "@react-email/render": "^2.0.2",
    "@react-email/tailwind": "^2.0.3",
    "bullmq": "^5.40.2",
    "elysia": "^1.4.21",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^4.3.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "bun@1.1.0"
}
